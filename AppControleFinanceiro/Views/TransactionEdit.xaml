<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.TransactionEdit"
             Title="TransactionEdit">
    
    <VerticalStackLayout Spacing="5">
        <Border BackgroundColor="Black" Stroke="Transparent" Margin="15" Padding="15" StrokeShape="RoundRectangle 30">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, 30">
                <Label Text="Editar" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" Grid.Column="0" TextColor="White"/>
                <Image Source="close.png" HorizontalOptions="Center"  Grid.Row="0" Grid.Column="1" WidthRequest="17">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_ToClose"/>
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>

        <Label x:Name="LabelError" IsVisible="False" TextColor="Red" Margin="30,0"/>
        
        <Grid ColumnDefinitions="*,*" Margin="30,0"  >
            <RadioButton x:Name="RadioIncome" Grid.Column="0" IsChecked="True" Content="Receita" />
            <RadioButton x:Name="RadioExpense" Grid.Column="1" Content="Despesa" HorizontalOptions="End" />
        </Grid>

        <Entry x:Name="EntryName" Placeholder="Nome" Margin="15, 0"/>
        <DatePicker x:Name="DatePickerDate" Margin="15, 0"/>
        <Entry x:Name="EntryValue" Placeholder="Valor" Margin="15, 0"/>

        <Button Text="Salvar" Margin="15, 10" HorizontalOptions="Center" Clicked="OnButtonClicked_Save"/>

    </VerticalStackLayout>
    
</ContentPage>